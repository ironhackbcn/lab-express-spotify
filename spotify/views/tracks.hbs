<link rel="stylesheet" href="/stylesheets/tracks.css">

<div class="tracks-container">
  <div class="tracks-wrap">
    <div class="tracks-container-header">
      <h4>Title</h4>
      <h4>Listen</h4>
    </div>
    <ul>
      {{#each tracks}}
      <li>
        <p>{{this.track_number}} - {{this.name}}</p>
        <audio controls src="{{this.preview_url}}"></audio>
      </li>
      {{/each}}
    </ul>
  </div>
</div>