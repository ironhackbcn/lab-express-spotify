<div>
  <div>
    {{#each artists}}
      <div>
        {{#if this.images}}
          <img src="{{this.images.0.url}}" alt="">
       {{else}}
          <img src="http://www.designshock.com/wp-content/uploads/2016/04/man-4-400.jpg" alt="">
        {{/if}}
        <div>
          <p>{{this.name}}</p>
          <a href="/albums/{{this.id}}">View Albums</a>
        </div>
      </div>
    {{/each}}
  </div>
</div>