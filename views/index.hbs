<section class="homepage">
  <h2 class="homepage-title">{{ title }}</h2>
  <form class="search-box" method="GET" action="/artists">
    <label class="hidden-label" for="artist">{{ label }}</label>
    <input class="search-input" type="text" name="artist" id="artist" placeholder="{{ label }}">
    <button class="btn" type="submit">{{ button }}</button>
  </form>
</section>