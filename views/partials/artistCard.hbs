<div class="card">
  {{#if images}}
  <img src="{{ images.0.url }}" alt="{{ name }} cover image" class="card-image">
  {{else}}
  <img src="/images/saso-tusar-QtgGYlug6Cw-unsplash.jpg" alt=" A generic cover image" class="card-image">
  {{/if}}
  <div class="card-info">
    <h3 class="card-artist text-truncate">{{ name }}</h3>
    <a class="btn" href="/albums/{{ id }}">Albums</a>
  </div>
</div>